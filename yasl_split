#!/yasl_linux
(3 != ? exit)
!

{
    1
    +
} increment

{
    1
    -
} decrement

// Check if the separator is a unique char
0:=:2       // separator stack 2
!
0:=:1       // string stack 1

0:3         // bool

// Check if separator len == 1
2:][:4
1:4
4:!= ? ("Separator need to be a unique char\n" print exit)

{
    1:#:1
    2:1
    1://:1
    1:^:1
    1:=:3
    1:!:1
    1:!:1
    5:decrement:5
    5:=:5
    0:5
    5:!=? reverse
} reverse

{
    reverse
    5:!:5 
    3:#:3
    3:^:3
    3:!:3
    3:#:3
    3:#print

} split

1:][:1
1:!:1
1:#:5
split