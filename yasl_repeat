#!/yasl_linux
{
    1
    +
} increment

{
    1
    -
} decrement

(2 <= ? exit)   // Exit if 2 or less args
!

0:=:1
0:1
1:<= ? ("Not a positive integer\n" print 1 exit)

0:=:1
1:eval:1    // The count is now stored on the stack 1
0:=:2
2:eval:2
!

{
    =print
    1:decrement:1
    1:=:1
    0:1
    1:!=? recur_print 
    
} recur_print

{
    recur_print
    "\n"
    print
    2:increment:2
    2:=:1
    1:3
    #:3
    3:==? exit
    !
    recur_str
} recur_str


// create a loop
recur_str