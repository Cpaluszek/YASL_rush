#!/yasl

!!
{
	=:1
	"A" >=
	1:= "Z" <=
	&&
	? (1:= "A" - ) : (
		1:= "a" >=
		1:= "z" <=
		&&
		? (1:= "a" - 26 +) : (
			1:= "0" >=
			1:= "9" <= 
			&&
			? (1:= "0" - 52 +) : (
				1:= "+" ==
				? (62) : (
					1:= "/" ==
					? (63)
				)
			)
		)
	)
}convert_b64

{
    1
    -
} decrement

{
    9:#:9
    2:9
    9://:9
    9:^:9
    9:=:2
    9:!:9
    9:!:9
    8:decrement:8
    8:=:8
    0:8
    8:!=? reverse
} reverse

{
    read:2
    2:=:3
    2:!
    2:][:9
    9:#:8
    //9:!
    //9:!
    reverse
    8:!:8
} read_std 

{
	0
	4
	#(
		6
		<<
		2:=
		2:!
		convert_b64
		|
	)
	
	=:4
	255:4
	4:&:4

	=:4
	255:4
	8:4
	4:<<:4
	4:&:4
	8:4
	4:>>:4

	=:4
	16:4
	4:>>:4

} b64_to_std

{
	"\e[38;2;"
	print
	4:print
	";"
	print
	4:print
	";"
	print
	4:print
	"m██"
	print
} put_pixel

read_std
3:=:0
@(
	b64_to_std
	put_pixel
	4:3
	3:-:3
	3:=:0
)
